<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="book.mapper.OrderMapper">
    <resultMap id="OrderMapper" type="Order">
        <association property="username" column="userId"  select="book.mapper.UserMapper.getUserNameById"/>
        <association property="address" column="addressId" select="book.mapper.AddressMapper.getAddressNameByUserId"/>
        <association property="books" column="id" select="book.mapper.ItemMapper.getBooksByOrderId"/>
    </resultMap>

    <insert id="insertOrder"></insert>
    <update id="updateOrder"></update>
    <delete id="deleteOrder"></delete>
    <select id="getOrderById" resultMap="OrderMapper" parameterType="int">
        SELECT * FROM `Order` WHERE id = #{id}
    </select>

</mapper>